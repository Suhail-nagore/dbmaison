<%- include("partials/header"); -%>


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Blog</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+zvK+2x4fF1wkG4ZbLegM5R/2DkP5SkkFV/DOOH"
        crossorigin="anonymous">

    <style>
        /* Custom CSS for increasing label font size */
        label {
            font-size: 1rem;
            font-weight: bold;
        }

        .submit-btn {
            margin-top: 20px;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="my-4">Add New Blog</h1>
        <form action="/compose-blog" method="POST" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <!-- Image Upload -->
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
            </div>
            <!-- Content -->
            <div class="mb-3">
                <label for="heading1" class="form-label">Heading 1</label>
                <input type="text" class="form-control" id="heading1" name="headings[]" required>
            </div>
            <div class="mb-3">
                <label for="content1" class="form-label">Content Paragraph 1</label>
                <textarea class="form-control" id="content1" name="content[]" rows="6" required></textarea>
            </div>
            <div class="mb-3">
                <label for="heading2" class="form-label">Heading 2</label>
                <input type="text" class="form-control" id="heading2" name="headings[]" required>
            </div>
            <div class="mb-3">
                <label for="content2" class="form-label">Content Paragraph 2</label>
                <textarea class="form-control" id="content2" name="content[]" rows="6" required></textarea>
            </div>
            <div class="mb-3">
                <label for="heading3" class="form-label">Heading 3</label>
                <input type="text" class="form-control" id="heading3" name="headings[]" required>
            </div>
            <div class="mb-3">
                <label for="content3" class="form-label">Content Paragraph 3</label>
                <textarea class="form-control" id="content3" name="content[]" rows="6" required></textarea>
            </div>
            <div class="mb-3">
                <label for="heading3" class="form-label">Heading 4</label>
                <input type="text" class="form-control" id="heading3" name="headings[]" required>
            </div>
            <div class="mb-3">
                <label for="content3" class="form-label">Content Paragraph 4</label>
                <textarea class="form-control" id="content3" name="content[]" rows="6" required></textarea>
            </div>
            <div class="mb-3">
                <label for="heading3" class="form-label">Heading 5</label>
                <input type="text" class="form-control" id="heading3" name="headings[]" required>
            </div>
            <div class="mb-3">
                <label for="content3" class="form-label">Content Paragraph 5</label>
                <textarea class="form-control" id="content3" name="content[]" rows="6" required></textarea>
            </div>
            <!-- YouTube Video Link -->
            <div class="mb-6">
                <label for="youtube" class="form-label">YouTube Video Link</label>
                <input type="text" class="form-control" id="youtube" name="youtube">
            </div>
            <button type="submit" class="btn btn-primary submit-btn">Submit</button>
        </form>
    </div>
</body>

</html>
