    <div class="container">
        <h1 class="my-4">Edit Blog</h1>
        <form action="/update-blog/<%= blog._id %>" method="POST" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" required>
            </div>
            <!-- Image Upload -->
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*">
            </div>
            <!-- Content -->
            <% blog.content.forEach((content, index) => { %>
                <div class="mb-3">
                    <label for="heading<%= index + 1 %>" class="form-label">Heading <%= index + 1 %></label>
                    <input type="text" class="form-control" id="heading<%= index + 1 %>" name="headings[]" value="<%= blog.headings[index] %>" required>
                </div>
                <div class="mb-3">
                    <label for="content<%= index + 1 %>" class="form-label">Content Paragraph <%= index + 1 %></label>
                    <textarea class="form-control" id="content<%= index + 1 %>" name="content[]" rows="6" required><%= content %></textarea>
                </div>
            <% }) %>
            <!-- YouTube Video Link -->
            <div class="mb-6">
                <label for="youtube" class="form-label">YouTube Video Link</label>
                <input type="text" class="form-control" id="youtube" name="youtube" value="<%= blog.youtube %>" required>
            </div>
            <button type="submit" class="btn btn-primary submit-btn">Update</button>
        </form>
    </div>
