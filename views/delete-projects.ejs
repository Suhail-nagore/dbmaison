<%- include("partials/header"); -%>

    <div class="container">
        <h1 style="text-align: center;">Delete Projects</h1>

        <ul class="list-group">
            <% posts.forEach(function(post) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center" style="font-size: 20px;">
                    <%= post.title %>
                        <form action="/delete/<%= post._id %>" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                </li>
                <% }); %>
        </ul>
    </div>